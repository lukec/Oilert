#!/bin/bash
INSTALL_DIR=/var/www/oilert

cp -r * $INSTALL_DIR
cp -R etc/service $INSTALL_DIR/etc/service
if [ ! -d /etc/service/oilert-consumer ]; then \
    update-service --add $INSTALL_DIR/etc/service/oilert-consumer oilert-consumer; \
fi
echo "Restarting the ais consumer"
svc -d /etc/service/oilert-consumer
svc -u /etc/service/oilert-consumer
if [ ! -d /etc/service/oilert-web ]; then \
    update-service --add $INSTALL_DIR/etc/service/oilert-web oilert-web; \
fi
echo "Restarting the oilert webserver"
svc -d /etc/service/oilert-web
svc -u /etc/service/oilert-web
